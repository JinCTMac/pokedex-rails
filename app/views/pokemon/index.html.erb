
<%= render 'shared/navbar' %>
<%= render 'shared/particles' %>

<div class="container main-container">
  <div class="row pokemon-row">
  <% @pokemons.each do |pokemon| %>
    <div class="col-sm-8 col-md-8 pokemon-col">
      <%= link_to pokemon_path(pokemon) do %>
      <div class="pokemon-card">
        <h2 class="pokemon-number"><%= pokemon.number %></h2>
        <h2 class="pokemon-name"><%= pokemon.name %></h2>
        <%= cl_image_tag pokemon.photo.key, height: 50, width: 50, crop: :fill, class: 'pokemon-img' %>
      </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

<div class="footer">
  <p>@Jin Mac 2021 - All images, sprites are property of The Pokemon Company and Game Freak.</p>
</div>
